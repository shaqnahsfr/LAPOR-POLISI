<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/background"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvDatang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat datang,"
            android:textSize="25sp"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/brown"/>

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDatang"
            android:text="di LAPOR-POLISI!"
            android:textSize="18sp"
            android:fontFamily="@font/inter_regular"
            android:textColor="@color/brown"/>

        <ImageButton
            android:id="@+id/IVpolri"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/text1"
            android:scaleType="fitXY"
            android:src="@drawable/polri1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:background="@color/transparent"/>

        <TextView
            android:id="@+id/tvPOLRI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/IVpolri"
            android:layout_centerHorizontal="true"
            android:text="Kepolisian Negara Republik Indonesia"
            android:textSize="17sp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/brown"/>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/relativeLayout1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="91dp"
                android:orientation="horizontal"
                android:scaleType="fitXY"
                android:background="@drawable/shape_profile1">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/laporan_masuk"/>

                <TextView
                    android:layout_width="119dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:text="Laporan Masuk"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="15sp"
                    android:textColor="@color/brown"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center_vertical">

                    <ImageButton
                        android:id="@+id/IBmasuk"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:scaleType="fitXY"
                        android:layout_marginRight="18dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/rectangle2"
                        android:background="@color/transparent"/>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="19dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/next_white"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="91dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:scaleType="fitXY"
                android:background="@drawable/shape_profile1">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/on_progress"/>

                <TextView
                    android:layout_width="119dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:text="Dalam Pengerjaan"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="15sp"
                    android:textColor="@color/brown"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center_vertical">

                    <ImageButton
                        android:id="@+id/IBprogress"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:scaleType="fitXY"
                        android:layout_marginRight="18dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/rectangle2"
                        android:background="@color/transparent"/>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="19dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/next_white"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="91dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:scaleType="fitXY"
                android:background="@drawable/shape_profile1">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/done"/>

                <TextView
                    android:layout_width="119dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:text="Riwayat Laporan Selesai"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="15sp"
                    android:textColor="@color/brown"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center_vertical">

                    <ImageButton
                        android:id="@+id/IBselesai"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:scaleType="fitXY"
                        android:layout_marginRight="18dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/rectangle2"
                        android:background="@color/transparent"/>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="19dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/next_white"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>